<section class="py-32 container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-extrabold mb-12"><%= t.company.title %> <span class="text-gradient"><%= t.company.subtitle %></span></h1>
        
        <div class="prose prose-invert max-w-none space-y-16">
            <section>
                <h2 class="text-3xl font-bold mb-6 border-b border-white/10 pb-4"><%= t.company.about_title %></h2>
                <p class="text-white/70 leading-relaxed text-lg">
                    <%= t.company.about_text %>
                </p>
            </section>

            <section class="grid md:grid-cols-2 gap-12">
                <div>
                    <h3 class="text-xl font-bold mb-4 text-primary uppercase tracking-widest"><%= t.company.mission_title %></h3>
                    <p class="text-white/60"><%= t.company.mission_text %></p>
                </div>
                <div>
                    <h3 class="text-xl font-bold mb-4 text-primary uppercase tracking-widest"><%= t.company.method_title %></h3>
                    <p class="text-white/60"><%= t.company.method_text %></p>
                </div>
            </section>

            <section>
                <h2 class="text-3xl font-bold mb-6 border-b border-white/10 pb-4"><%= t.company.experience_title %></h2>
                <p class="text-white/70 leading-relaxed mb-6">
                    <%= t.company.experience_text_1 %>
                </p>
                <p class="text-white/60 text-sm leading-relaxed">
                    <%= t.company.experience_text_2 %>
                </p>
            </section>

            <section>
                <h2 class="text-3xl font-bold mb-6 border-b border-white/10 pb-4"><%= t.company.profile_title %></h2>
                <p class="text-white/70 mb-8"><%= t.company.profile_desc %></p>
                
                <h4 class="text-sm font-bold mb-4 text-white/40 uppercase tracking-widest"><%= t.company.guidelines %></h4>
                <ul class="space-y-4 text-white/60">
                    <li class="flex gap-4">
                        <span class="text-primary font-bold">✓</span>
                        <span><%= t.company.segments %></span>
                    </li>
                    <li class="flex gap-4">
                        <span class="text-primary font-bold">✓</span>
                        <span><%= t.company.focus %></span>
                    </li>
                    <li class="flex gap-4">
                        <span class="text-red-500 font-bold">✕</span>
                        <span><%= t.company.restriction %></span>
                    </li>
                </ul>
            </section>

            <section class="bg-white/5 p-12 rounded-3xl border border-white/10">
                <h2 class="text-3xl font-bold mb-6"><%= t.company.governance_title %></h2>
                <p class="text-white/70 mb-8 leading-relaxed">
                    <%= t.company.governance_text %>
                </p>
                <p class="text-white/40 text-sm italic">
                    <%= t.company.governance_note %>
                </p>
            </section>
        </div>
    </div>
</section>
