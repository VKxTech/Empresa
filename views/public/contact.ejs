<section class="py-32 container mx-auto px-6">
    <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-20">
        <div>
            <h2 class="text-5xl font-outfit font-black mb-8"><%= t.contact.title %> <span class="text-gradient"><%= t.contact.title_gradient %></span></h2>
            <p class="text-white/60 text-lg mb-12 leading-relaxed">
                <%= t.contact.subtitle %>
            </p>
            
            <div class="space-y-8">
                <div class="flex items-center gap-6">
                    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                    </div>
                    <div>
                        <p class="text-xs text-white/40 font-bold uppercase tracking-widest"><%= t.contact.whatsapp_label %></p>
                        <a href="https://wa.me/5589999307197" class="text-xl font-bold hover:text-primary transition-colors"><%= t.contact.whatsapp_value %></a>
                    </div>
                </div>
                <div class="flex items-center gap-6">
                    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    </div>
                    <div>
                        <p class="text-xs text-white/40 font-bold uppercase tracking-widest"><%= t.contact.email_label %></p>
                        <span class="text-xl font-bold"><%= t.contact.email_value %></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="glass-card p-12">
            <h4 class="text-2xl font-bold mb-8"><%= t.contact.form_title %></h4>
            <form action="/contact" method="POST" class="space-y-6">
                <input type="text" placeholder="<%= t.contact.placeholder_name %>" required class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 outline-none focus:border-primary/50">
                <input type="email" placeholder="<%= t.contact.placeholder_email %>" required class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 outline-none focus:border-primary/50">
                <textarea placeholder="<%= t.contact.placeholder_message %>" rows="4" required class="w-full bg-white/5 border border-white/10 rounded-xl px-4 py-3 outline-none focus:border-primary/50 resize-none"></textarea>
                <button type="submit" class="w-full btn-primary py-4"><%= t.contact.btn_submit %></button>
            </form>
        </div>
    </div>
</section>
