<div class="mb-8">
    <a href="/admin/leads" class="text-primary hover:underline text-sm font-bold">← Voltar para a lista</a>
</div>

<div class="grid md:grid-cols-3 gap-8">
    <div class="md:col-span-2 space-y-8">
        <!-- Lead Info -->
        <div class="bg-dark p-8 rounded-3xl border border-white/5">
            <div class="flex justify-between items-start mb-8">
                <div>
                    <h2 class="text-3xl font-bold mb-2"><%= lead.name %></h2>
                    <p class="text-white/40"><%= lead.email %> | <%= lead.phone %></p>
                </div>
                <div class="text-right">
                    <div class="text-xs font-bold text-white/40 uppercase tracking-widest mb-1">Score</div>
                    <div class="text-3xl font-black <%= lead.score >= 8 ? 'text-primary' : lead.score >= 5 ? 'text-yellow-500' : 'text-white/20' %>">
                        <%= lead.score %>/10
                    </div>
                </div>
            </div>

            <div class="grid md:grid-cols-2 gap-8 text-sm">
                <div class="bg-white/5 p-6 rounded-2xl">
                    <p class="text-white/40 mb-1">Empresa</p>
                    <p class="font-bold"><%= lead.companyName || 'Pessoa Física' %></p>
                </div>
                <div class="bg-white/5 p-6 rounded-2xl">
                    <p class="text-white/40 mb-1">Site</p>
                    <p class="font-bold"><%= lead.website || 'N/A' %></p>
                </div>
            </div>

            <div class="mt-8">
                <p class="text-white/40 text-xs font-bold uppercase tracking-widest mb-4">Notas Internas / Histórico</p>
                <form action="/admin/leads/<%= lead.id %>/update" method="POST" class="space-y-4">
                    <textarea name="notes" rows="6" class="w-full bg-white/5 border border-white/10 rounded-2xl p-4 outline-none focus:border-primary/50 resize-none text-sm" placeholder="Adicione observações sobre a qualificação..."><%= lead.notes %></textarea>
                    
                    <div class="flex gap-4 items-center">
                        <div class="flex-1">
                            <label class="block text-[10px] font-bold text-white/40 uppercase mb-2">Status do Pipeline</label>
                            <select name="status" id="pipeline-status" onchange="checkFiscalAlert(this.value)" class="w-full bg-white/10 border border-white/10 rounded-xl px-4 py-2 text-sm outline-none">
                                <% ['Novo', 'Em Análise', 'Qualificado', 'Proposta Enviada', 'Fechado', 'Perdido / Curioso'].forEach(st => { %>
                                    <option value="<%= st %>" class="bg-dark" <%= lead.status === st ? 'selected' : '' %>><%= st %></option>
                                <% }) %>
                            </select>
                        </div>
                        <button type="submit" class="btn-primary py-2 px-8 mt-6">Atualizar Registro</button>
                    </div>

                    <div id="fiscal-alert" class="<%= lead.status === 'Fechado' ? 'block' : 'hidden' %> mt-6 bg-yellow-500/10 border border-yellow-500/20 text-yellow-500 p-4 rounded-xl text-xs font-bold">
                        ⚠️ Lembrete: Emitir Nota Fiscal referente ao serviço para projetos fechados.
                    </div>
                </form>

                <!-- Fiscal Management -->
                <div class="mt-12 p-8 bg-white/5 rounded-3xl border border-white/5">
                    <h4 class="text-xs font-bold text-white/40 uppercase tracking-widest mb-6">Gestão Fiscal (Interno)</h4>
                    <form action="/admin/leads/<%= lead.id %>/fiscal" method="POST" class="grid md:grid-cols-3 gap-6">
                        <div>
                            <label class="block text-[10px] text-white/40 uppercase mb-2">Status NF</label>
                            <select name="nfStatus" class="w-full bg-dark border border-white/10 rounded-xl px-4 py-2 text-xs outline-none">
                                <option value="Pendente" <%= lead.nfStatus === 'Pendente' ? 'selected' : '' %>>Pendente</option>
                                <option value="Emitida" <%= lead.nfStatus === 'Emitida' ? 'selected' : '' %>>Emitida</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-[10px] text-white/40 uppercase mb-2">Número NF</label>
                            <input type="text" name="nfNumber" value="<%= lead.nfNumber || '' %>" placeholder="Ex: 2024001" class="w-full bg-dark border border-white/10 rounded-xl px-4 py-2 text-xs outline-none">
                        </div>
                        <div class="flex items-end">
                            <button type="submit" class="w-full bg-white/10 hover:bg-white/20 py-2 rounded-xl text-xs font-bold transition-all">Salvar Registro Fiscal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
            function checkFiscalAlert(val) {
                const alert = document.getElementById('fiscal-alert');
                if (val === 'Fechado') {
                    alert.classList.remove('hidden');
                } else {
                    alert.classList.add('hidden');
                }
            }
        </script>

        <!-- Requests -->
        <div class="bg-dark p-8 rounded-3xl border border-white/5">
            <h3 class="text-xl font-bold mb-6">Solicitações de Projeto</h3>
            <div class="space-y-6">
                <% lead.requests.forEach(req => { %>
                    <div class="border-l-4 border-primary bg-white/5 p-6 rounded-r-2xl">
                        <div class="flex justify-between mb-4">
                            <span class="text-primary font-bold"><%= req.projectType %></span>
                            <span class="text-xs text-white/30"><%= req.createdAt.toLocaleString() %></span>
                        </div>
                        <p class="text-sm text-white/70 mb-4 italic">"<%= req.message %>"</p>
                        <div class="text-xs">
                            <span class="text-white/40 uppercase font-bold tracking-widest">Investimento estimado:</span>
                            <span class="text-white/80 border border-white/10 px-2 py-1 rounded ml-2"><%= req.investmentRange %></span>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <div class="space-y-8">
        <!-- Proposals & Quotes -->
        <div class="bg-dark p-8 rounded-3xl border border-white/5">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold">Propostas Enviadas</h3>
                <a href="/admin/quotes/new?leadId=<%= lead.id %>" class="text-xs text-primary font-bold hover:underline">+ Nova Proposta</a>
            </div>
            <div class="space-y-4">
                <% lead.quotes.forEach(quote => { %>
                    <div class="bg-white/5 p-4 rounded-xl border border-white/5 flex justify-between items-center">
                        <div>
                            <div class="text-sm font-bold"><%= quote.title %></div>
                            <div class="text-[10px] text-white/30 uppercase tracking-widest">R$ <%= quote.total.toLocaleString() %> | <%= quote.status %></div>
                        </div>
                        <a href="<%= quote.pdfPath %>" target="_blank" class="text-primary hover:underline font-bold text-xs italic">Ver PDF</a>
                    </div>
                <% }) %>
                <% if (lead.quotes.length === 0) { %>
                    <p class="text-white/20 text-xs italic">Nenhuma proposta gerada para este lead.</p>
                <% } %>
            </div>
        </div>

        <!-- Commercial Documents (Contracts/SLA) -->
        <div class="bg-dark p-8 rounded-3xl border border-white/5">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold">Contratos & SLAs</h3>
                <a href="/admin/documents/generate/<%= lead.id %>" class="text-xs text-primary font-bold hover:underline">Gerar Documentos</a>
            </div>
            <div class="space-y-4">
                <% lead.commercialDocs.forEach(doc => { %>
                    <div class="bg-white/5 p-4 rounded-xl border border-white/5 flex justify-between items-center">
                        <div>
                            <div class="text-sm font-bold"><%= doc.type %></div>
                            <div class="text-[10px] text-white/30 uppercase tracking-widest italic">Gerado em: <%= doc.createdAt.toLocaleDateString() %></div>
                        </div>
                        <a href="<%= doc.pdfPath %>" target="_blank" class="text-primary hover:underline font-bold text-xs italic">Ver PDF</a>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- Automation & Actions -->
        <div class="bg-dark-surface p-8 rounded-3xl border border-white/5">
            <h4 class="text-sm font-bold uppercase tracking-widest mb-6 border-b border-white/5 pb-4">Status da Automação</h4>
            <div class="space-y-4 text-xs">
                <div class="flex justify-between">
                    <span class="text-white/40">Último e-mail:</span>
                    <span><%= lead.lastEmailedAt ? lead.lastEmailedAt.toLocaleDateString() : 'Nenhum' %></span>
                </div>
                <div class="flex justify-between">
                    <span class="text-white/40">Passo da sequência:</span>
                    <span>Step <%= lead.sequenceStep %> / 3</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-white/40">Opt-in LGPD:</span>
                    <span class="<%= lead.consent ? 'text-green-500' : 'text-red-500' %>"><%= lead.consent ? 'Sim' : 'Não' %></span>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="bg-dark p-8 rounded-3xl border border-white/5 space-y-4">
            <a href="https://wa.me/5589999307197" target="_blank" class="block w-full text-center bg-green-500/10 text-green-500 border border-green-500/20 py-3 rounded-xl font-bold hover:bg-green-500 hover:text-white transition-all">Abrir WhatsApp</a>
            <a href="/admin/invoices/new?leadId=<%= lead.id %>" class="block w-full text-center bg-primary/10 text-primary border border-primary/20 py-3 rounded-xl font-bold hover:bg-primary hover:text-dark transition-all">Gerar Link Pagamento</a>
            <a href="/admin/quotes/new?leadId=<%= lead.id %>" class="block w-full text-center bg-white/5 border border-white/10 py-3 rounded-xl font-bold hover:bg-white/10 transition-all text-sm">Gerar Orçamento PDF</a>
        </div>
    </div>
</div>
