<div class="bg-dark rounded-2xl border border-white/5 overflow-hidden">
    <table class="w-full text-left">
        <thead class="bg-white/5 text-xs font-bold uppercase tracking-widest text-white/40">
            <tr>
                <th class="px-8 py-4">Nome</th>
                <th class="px-8 py-4">Empresa</th>
                <th class="px-8 py-4">Score</th>
                <th class="px-8 py-4">Status</th>
                <th class="px-8 py-4">Data</th>
                <th class="px-8 py-4 text-right">Ações</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
            <% leads.forEach(lead => { %>
                <tr class="hover:bg-white/5 transition-all">
                    <td class="px-8 py-6">
                        <div class="font-medium"><%= lead.name %></div>
                        <div class="text-[10px] text-white/30 truncate w-32"><%= lead.email %></div>
                    </td>
                    <td class="px-8 py-6 text-white/60"><%= lead.companyName || 'PF' %></td>
                    <td class="px-8 py-6">
                        <span class="font-black text-xs <%= lead.score >= 8 ? 'text-primary' : lead.score >= 5 ? 'text-yellow-500' : 'text-white/20' %>">
                            <%= lead.score %>
                        </span>
                    </td>
                    <td class="px-8 py-6">
                        <span class="px-3 py-1 rounded-full text-[9px] font-bold uppercase tracking-widest bg-white/5 border border-white/5 text-white/50">
                            <%= lead.status %>
                        </span>
                    </td>
                    <td class="px-8 py-6 text-sm text-white/30"><%= lead.createdAt.toLocaleDateString() %></td>
                    <td class="px-8 py-6 text-right">
                        <a href="/admin/leads/<%= lead.id %>" class="text-primary hover:underline text-sm font-bold">Ver Detalhes</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
